    <br>
    <h6>{{Movie_Name}}</h6>
    <img src={{Movie_Poster}}>
    {{#each MovieDetails}}
    <p>{{Date}}</p>
    <button type="button" class="btn btn-primary">{{Time}}</button>
    {{/each}}
    <br><br>
    {{/each}} --}}





</div>